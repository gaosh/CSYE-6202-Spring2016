<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="LogFileAppender" type="log4net.Appender.FileAppender">
    <file type="log4net.Util.PatternString" value="C:\MyLogs\mylog.txt" />
    <appendToFile value="true" />
    <bufferSize value="20" />
    <LockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <layout type="log4net.Layout.PatternLayout">
      <header type="log4net.Util.PatternString" value="%newline[Log Starts]" />
      <footer type="log4net.Util.PatternString" value="%newline[Log Ends]" />
      <conversionPattern value="%newline%date [%username] - %message" />

    </layout>

  </appender>
  <!-- Specify the level for some specific categories -->
  <logger name="MyLog">
    <level value="DEBUG" />
    <appender-ref ref="LogFileAppender" />
  </logger>

</log4net>